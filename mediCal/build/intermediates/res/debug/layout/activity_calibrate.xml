<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.medical.Calibrate" >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id ="@+id/banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Load and Label Tubes"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_toRightOf="@id/imageView1"
                   />

                <EditText
                    android:id = "@+id/addName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text|textCapWords"
                    android:hint="Name"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/banner"/>

                <EditText
                    android:id = "@+id/addTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="time|textMultiLine"
                    android:hint="Tube#"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/addName"/>


                <EditText
                    android:id = "@+id/addLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="# of Pills"
                    android:inputType="text"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/addTimes"/>

                <EditText
                    android:id = "@+id/addDose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Dose"
                    android:inputType="text"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/addLoad" />


                <Button
                    android:id ="@+id/add"
                    android:layout_below="@+id/addDose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Pill"
                    android:onClick="onClick"/>
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@android:id/list"
                android:layout_below="@+id/add" />
        </RelativeLayout>



</RelativeLayout>
